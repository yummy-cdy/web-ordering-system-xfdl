/************************************************************************************************
 * FORM 변수 선언 영역
 ************************************************************************************************/
this.userId = nexacro.getApplication().gdsAuth.getColumn(0, "LOGIN_EMAIL");

/************************************************************************************************
 * FORM EVENT 영역(onload, onbeforeclose)
 ************************************************************************************************/
/**
 * @description example: ~하는 부분
*/
this.frmMyPage1200_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	this.fnGetUserInfo();
	this.fnGetAllUserHist();
};

/************************************************************************************************
 * CALLBACK 콜백 처리부분(Transaction, Popup)
 ************************************************************************************************/
this.fn_callback = function(svcId, errCd, errMsg)
{
	if(errCd < 0){ alert("에러 : " + errMsg); }
	
	if(svcId == "svcGetUserSmry"){
		this.resetScroll();
	}
	
	if(svcId == "svcGetAllUserHist"){
		this.resetScroll();
	}
}


/************************************************************************************************
 * CRUD 및 TRANSACTION 서비스 호출 처리
 ************************************************************************************************/


/************************************************************************************************
 * 사용자 FUNCTION 영역
 ************************************************************************************************/
this.fnGetUserInfo = function ()
{
	var sSvcId  = "svcGetUserSmry";
	var sUrl    = "p024/getUserSmry.do";
	var inData  = "";
	var outData = "ds_userInfo=out_data";
	var sParam  = "userId="+this.userId;
	this.gfnTransaction(sSvcId, sUrl, inData, outData, sParam, "fn_callback");
};

this.fnGetAllUserHist = function ()
{
	var sSvcId  = "svcGetAllUserHist";
	var sUrl    = "p024/getAllUserHist.do";
	var inData  = "";
	var outData = "ds_userHist=out_data";
	var sParam  = "userId="+this.userId;
	this.gfnTransaction(sSvcId, sUrl, inData, outData, sParam, "fn_callback");
};

/************************************************************************************************
 * 각 COMPONENT 별 EVENT 영역
 ************************************************************************************************/



