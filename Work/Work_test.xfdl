    <Script type="xscript5.1"><![CDATA[
this.fn_click = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	obj.height = 0;
	
	for(var i=0; i<5;i++){
		var sDivId = "divCard" + i;
		var objDiv = this.components[sDivId];
		objDiv.top = obj.getOffsetTop();
		objDiv.left = obj.getOffsetLeft()+(i*10);
		objDiv.background = "white"
		
	}
	
	this.resetScroll();
	
};




this.Work_test_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	var pbase = this.staMain.getOffsetWidth();
	for(var i=0; i<5;i++){
		var sDivId = "divCard" + i;
		var objDiv = new Div();
		objDiv.init(sDivId, 250, 400, pbase+10, 310);
			
		objDiv.set_border("1px solid #000000");
		objDiv.set_background("lavender");
        
		this.addChild(sDivId, objDiv);
		objDiv.show();
	}
	
	
	this.resetScroll();
};
]]></Script>
  </Form>
